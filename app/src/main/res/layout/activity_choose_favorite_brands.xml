<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActions.ChooseFavoriteBrandsActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">

    <TextView
        android:id="@+id/chooseTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your\nFavorite Brands"
        android:textSize="30sp"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalRecyclerViewID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@+id/chooseTextId"
            android:layout_marginBottom="50dp"
            android:background="#fff"/>

        <TextView
            android:id="@+id/textViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe right or left to browse more brands"
            android:textSize="16sp"
            android:textColor="#777676"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_below="@+id/horizontalRecyclerViewID"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continueBtnId"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:text="Continue"
        android:textAllCaps="true"
        android:background="@drawable/continue_button_design"
        android:textColor="#fff"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="100dp"/>

</FrameLayout>
