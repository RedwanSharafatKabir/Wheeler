<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActions.ProfileAccount"
    android:background="#ECECEC"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileActivityPicID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/ic_profile_image_24"
                    android:clickable="true"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="-32dp"
                    android:layout_gravity="end|bottom">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/uploadProfilePictureID"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:background="#B4BABA"
                        android:padding="5dp"
                        android:clickable="true"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:id="@+id/upperLinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="14sp"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:textColor="#686868"
                                    android:layout_gravity="left"
                                    android:background="#fff"
                                    android:text=" Username"/>

                                <TextView
                                    android:id="@+id/profileActivityNameID"
                                    android:layout_width="match_parent"
                                    android:textSize="16sp"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="left"
                                    android:background="#fff" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#616161"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="14sp"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:textColor="#686868"
                                    android:layout_gravity="left"
                                    android:background="#fff"
                                    android:text=" Email"/>

                                <TextView
                                    android:id="@+id/profileActivityEmailID"
                                    android:layout_width="match_parent"
                                    android:textSize="16sp"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="10dp"
                                    android:background="#fff"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#616161"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="14sp"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:textColor="#686868"
                                    android:layout_gravity="left"
                                    android:background="#fff"
                                    android:text=" Phone"/>

                                <TextView
                                    android:id="@+id/profileActivityPhoneID"
                                    android:layout_width="match_parent"
                                    android:textSize="16sp"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:layout_gravity="left"
                                    android:background="#fff"
                                    android:layout_marginTop="10dp"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#616161"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                            <LinearLayout
                                android:id="@+id/changePasswordID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="9"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:textSize="14sp"
                                        android:fontFamily="serif"
                                        android:layout_height="wrap_content"
                                        android:textColor="#686868"
                                        android:layout_gravity="left"
                                        android:background="#fff"
                                        android:text=" Password"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:textSize="16sp"
                                        android:fontFamily="serif"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_gravity="left"
                                        android:gravity="center|left"
                                        android:background="#fff"
                                        android:layout_marginTop="10dp"
                                        android:text="0123456789"
                                        android:inputType="textPassword"
                                        android:paddingLeft="5dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_baseline_edit_24"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/loginFromProfileID"
                    android:layout_below="@id/upperLinearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:layout_margin="20dp"
                    android:text="@string/loginText"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/profileProgressbarId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
