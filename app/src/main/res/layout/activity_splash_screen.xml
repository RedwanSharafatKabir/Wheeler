<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActions.SplashScreen"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wheeler"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:id="@+id/splashImageID"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/wheeler_final_logo"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/linearLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp">

                <Button
                    android:id="@+id/signinPageID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/customize_login_signup_background"
                    android:text="Sign in"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:onClick="signInBtnMethod"
                    android:clickable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="new here ?"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="5dp"/>

                <Button
                    android:id="@+id/signupPageID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_homescreen_register"
                    android:text="Join now"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:onClick="joinNowBtnMethod"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
